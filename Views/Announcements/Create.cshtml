@model WebA.Models.Announcement

@{
    ViewData["Title"] = "Create";
}
<style>
    .announcement-form {
        border: 1px solid #ccc;
        padding: 20px;
        height: 250px;
    }

    .title-group {
        position: absolute;
        top: 20px;
        left: 20px;
        width: calc(33% - 40px);
    }

    .description-group {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: calc(33% - 40px);
    }

    .release-date-group {
        position: absolute;
        bottom: 20px;
        right: 20px;
        width: calc(33% - 40px);
    }
</style>
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" id="announcement-form" class="position-relative announcement-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group title-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group description-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group release-date-group">
                <label asp-for="ReleaseDate" class="control-label"></label>
                <input asp-for="ReleaseDate" class="form-control" />
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>
        </form>
        <div class="form-group" style="margin-top: 20px;">
            <input type="submit" value="Create" class="btn btn-primary" form="announcement-form" />
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


