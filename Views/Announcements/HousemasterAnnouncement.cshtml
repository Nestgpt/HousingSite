@model IEnumerable<WebA.Models.Announcement>

<style>
    body {
        background-color: #fff7df; /* 替换为你需要的背景颜色 */
    }

   
    .announcements-container {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .announcement-box {
        border: 1px solid #ccc;
        padding: 10px;
        position: relative;
        border-radius: 10px;
        background-color: #f9f9f9;
        height:100px;
        width:85%;
        margin-left:20px;
    }

    .announcement-title {
        position: absolute;
        top: 10px;
        left: 10px;
        font-weight: bold;
    }

    .announcement-description {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100px;
        margin: 40px 0;
        text-align: center;
    }

    .announcement-date {
        position: absolute;
        bottom: 10px;
        right: 10px;
        font-size: 0.8em;
        color: #777;
    }

    .announcement-actions {
        display: flex;
        justify-content: space-around;
        margin-top: 10px;
    }

    .create-button {
        display: block;
        margin-bottom: 20px;
        background-color: #FFE183;
        color: black;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        border-radius: 10px;
        width: 35%;
        margin: 0 auto;
        font-weight: bold;
        font-size: 17px;
    }

    img {
        width: 90%; /* 确保图片宽度100% */
        height: auto; /* 高度自动调整 */
        display: block; /* 确保图片作为块元素显示，不与其他元素同行 */
        margin-bottom: 10px; /* 图片底部间距，避免与下方元素紧贴 */
        margin-left:20px;
    }
</style>
<div class="img">
    <img src="/img/topannouncement.png" alt="公告">
 </div>
<p>
    <a asp-action="Create" class="create-button">新增公告</a>
</p>
<div class="announcements-container">
    @foreach (var item in Model)
    {
        <div class="announcement-box">
            <div class="announcement-title">
                @Html.DisplayFor(model => item.Title)
            </div>
            <div class="announcement-description">
                @Html.DisplayFor(model => item.Description)
            </div>
            <div class="announcement-date">
                @Html.DisplayFor(model => item.ReleaseDate)
            </div>
            <div class="announcement-actions">
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </div>
        </div>
    }
</div>
