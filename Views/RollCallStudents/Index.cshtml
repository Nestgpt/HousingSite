@model IEnumerable<WebA.Models.RollcallStudent>

@{
    ViewData["Title"] = "點名名單";
}
<h1>test</h1>
<head>
    <style>
        #topdesign {
            width: 100%;
        }

        .ListBar {
            background-color: #e55353;
            color: white;
        }

        .form-control {
            position: relative;
            transform: translate(140%,-60%);
            width: 150px;
            height: 29px;
            background-image: url('~/images/NEST_SearchBack.png');
            background-size: contain;
            background-position: center;
            padding: 5px 29px;
            border: none;
            outline: none;
        }
    </style>
</head>

<img src="~/images/NEST_RollcallPhoto.png" id="topdesign">
@using (Html.BeginForm("Index", "RollCallStudents", FormMethod.Get))
{
    @Html.TextBox("search", null, htmlAttributes: new { @class = "form-control" })
    @Html.RadioButton("searchby", "StudentId", true) <text>學號</text>
    @Html.RadioButton("searchby", "Rollcall", false) <text>點名狀態</text>
    @Html.RadioButton("searchby", "Datetime", false) <text>日期</text>

    <input type="date" name="searchdate" class="form-control" />
    <input type="submit" value="Search" class="btn btn-primary" />
}

<p>
    <a asp-action="Create">新增</a>
</p>
<table class="table">
    <thead>
        <tr class="ListBar">
            <th>
                @Html.DisplayNameFor(model => model.StudentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rollcall)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Datetime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rollcall)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Datetime)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.RollcallId">檢視</a> |
                    <a asp-action="Delete" asp-route-id="@item.RollcallId">刪除</a>
                </td>
            </tr>
        }
    </tbody>
</table>
