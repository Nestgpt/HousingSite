@model IEnumerable<WebA.Models.Pay>

@{
    ViewData["Title"] = "本期繳費";
}
<style>
    body {
        background-color: #fff7df; /* 替换为你需要的背景颜色 */
    }

    .center {
        display: flex;
        justify-content: center; /* 將內容水平置中 */
        
    }

    .update-link {
        display: inline-block;
        margin-top: 5px;
        padding: 5px 10px; /* Smaller padding */
        background-color: #FFA629; /* Background color for the link */
        color: black; /* Text color */
        text-decoration: none;
        border-radius: 3px; /* Smaller rounded corners */
        border: 1px solid #FFA629; /* Border */
        font-size: 16px; /* Adjust the font size as needed */
        font-weight: bold; /* Make the font bold */
    }

        .update-link:hover {
            background-color: #FFA629; /* Darker shade on hover */
        }

    .delete-link {
        display: inline-block;
        padding: 5px 10px;
        background-color: #FFA629; /* 设置背景色为红色，你可以根据需要修改 */
        color: black; /* 文本颜色 */
        text-decoration: none;
        border: 1px solid #FFA629; /* 设置边框 */
        border-radius: 3px; /* 圆角 */
        margin-top:120px;
        font-size: 14px; /* Adjust the font size as needed */
        font-weight: bold; /* Make the font bold */
    }

        .delete-link:hover {
            background-color: #FFA629; /* 鼠标悬停时的背景色 */
            border: 1px solid #FFA629; /* 鼠标悬停时的边框颜色 */
        }

    .table {
        width: 100%;
        border-collapse: collapse;
        background-color: #FFE183; /* 表格背景颜色 */
    }
</style>
<div style="margin-bottom: 20px;">
<img src="/img/toprenewpay.jpg" alt="更新繳費上" style="display: block; width: 100%; height: auto;">
</div>
<div class="table-wrapper">
    <table class="table">
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (item.ImageData != null && item.ImageData.Length > 0)
                        {
                            <img src="data:@item.ImageMimeType;base64,@Convert.ToBase64String(item.ImageData)" width="270" height="270" />
                        }
                        else
                        {
                            <span>No image available</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="delete-link">刪除</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>

<div class="center">
    <a asp-action="Create" class="update-link">更新水電費收款碼</a>
  
</div>
