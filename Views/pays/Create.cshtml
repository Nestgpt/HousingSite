@model WebA.Models.Pay

@{
    ViewData["Title"] = "Create";
}

<style>
    body {
        background-color: #fff7df; /* 替换为你需要的背景颜色 */
    }

    .custom-btn {
        background-color: #FFA629;
        border-color:#FFA629;
        color: black;
        margin-top:30px;
        font-weight: bold; /* 設置文字粗體 */
        /* 添加其他样式 */
    }

</style>
<div style="margin-bottom: 10px;">
    <img src="/img/toprenewpay.jpg" alt="更新繳費上" style="display: block; width: 100%; height: auto;">
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group" style=" margin-top:30px;">
               
                <input asp-for="ImageFile" class="form-control" type="file" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary custom-btn " />
            </div>
        </form>
    </div>
</div>


@if (ViewBag.Errors != null)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewBag.Errors)
            {
                <li>@error</li>
            }
        </ul>
    </div>
}
<div style="margin-bottom: 20px;">
    <img src="/img/icon.jpg" alt="icon" style="display: block; position: fixed;
            bottom: 10px;right: 10px;margin-left:10px; width: 35%; height: auto;">
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
